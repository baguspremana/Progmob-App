<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">
<!--    <TextView
        style="@style/label"
        android:text="Kode"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/tv_kode"
        style="@style/judul"
        android:text="1234677"
        android:layout_marginTop="10dp"/>-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp">

        <LinearLayout
            android:id="@+id/layout_input"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/bg_white"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnScan"
                android:layout_margin="10dp"
                style="@style/btnStyle"
                android:text="Scan Tiket"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:text="Data Tiket"
                android:id="@+id/signUp"
                android:layout_marginBottom="5dp"
                style="@style/judul"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:text="Nama"
                style="@style/label" />
            <TextView
                android:id="@+id/tv_detail_name_scan"
                style="@style/tvStyle"
                android:text=""
                android:layout_marginTop="5dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:text="E-Mail"
                style="@style/label" />
            <TextView
                android:id="@+id/tv_detail_email_scan"
                style="@style/tvStyle"
                android:text=""
                android:layout_marginTop="5dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:text="Kontak"
                style="@style/label" />
            <TextView
                android:id="@+id/tv_detail_kontak_scan"
                style="@style/tvStyle"
                android:text=""
                android:layout_marginTop="5dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:text="Konsumsi"
                style="@style/label" />
            <TextView
                android:id="@+id/tv_detail_konsumsi_scan"
                style="@style/tvStyle"
                android:text=""
                android:layout_marginTop="5dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:text="Instansi"
                style="@style/label" />
            <TextView
                android:id="@+id/tv_detail_instansi_scan"
                style="@style/tvStyle"
                android:text=""
                android:layout_marginTop="5dp"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>