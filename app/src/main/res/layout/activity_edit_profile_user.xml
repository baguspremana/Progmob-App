<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".user.profile.EditProfileUserActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/edit_profile_image_user"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@drawable/bg_gradient"/>

            <TextView
                android:id="@+id/tv_upload_foto_profile_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Pilih Foto Profile"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"/>

            <TextView
                style="@style/label"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="Nama"/>
            <EditText
                android:id="@+id/et_edit_name_user"
                style="@style/etStyle"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:hint="Input Nama"/>

            <TextView
                style="@style/label"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="Email"/>
            <EditText
                android:id="@+id/et_edit_email_user"
                style="@style/etStyle"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:hint="Input Email"/>

            <TextView
                style="@style/label"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="Kontak"/>
            <EditText
                android:id="@+id/et_edit_kontak_user"
                style="@style/etStyle"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:hint="Input Kontak"/>

            <TextView
                android:text="Jenis Kelamin"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                style="@style/label" />
            <RadioGroup
                android:id="@+id/rg_edit_gender_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp">
                <RadioButton
                    android:id="@+id/rb_edit_female_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perempuan"
                    android:textSize="15sp"
                    android:textColor="#000"/>
                <RadioButton
                    android:id="@+id/rb_edit_male_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Laki-laki"
                    android:textSize="15sp"
                    android:textColor="#000"/>
            </RadioGroup>

            <Button
                android:id="@+id/save_profile_user"
                style="@style/btnStyle"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:text="Simpan"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>